<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<Pane prefHeight="243.0" prefWidth="515.0" stylesheets="@../../common.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.spectralogic.dsbrowser.gui.components.settings.SettingPresenter">
    <children>
        <TabPane prefHeight="243.0" prefWidth="531.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="loggingTab">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <GridPane alignment="CENTER" layoutY="-8.0" prefHeight="223.0" prefWidth="482.0"
                                          vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0"
                                                           prefWidth="201.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="386.0" minWidth="10.0"
                                                           prefWidth="204.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label fx:id="locationSetting" alignment="TOP_LEFT"/>
                                        <Label fx:id="logSizeSetting" GridPane.rowIndex="1"/>
                                        <Label fx:id="savedLogSetting" GridPane.rowIndex="2"/>
                                        <TextField fx:id="logSize" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <GridPane.margin>
                                                <Insets/>
                                            </GridPane.margin>
                                        </TextField>
                                        <TextField fx:id="numRolling" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <TextField fx:id="logDirectory" onAction="#showFileExplorer"
                                                   onMouseClicked="#showFileExplorer" prefHeight="18.0"
                                                   prefWidth="150.0" GridPane.columnIndex="1"/>
                                        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0"
                                              spacing="15.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                            <children>
                                                <Button fx:id="saveSettingsButton" mnemonicParsing="false"
                                                        onAction="#saveLogSettings"/>
                                                <Button fx:id="cancelSettingsButton" cancelButton="true"
                                                        mnemonicParsing="false" onAction="#closeDialog"/>
                                            </children>
                                            <GridPane.margin>
                                                <Insets top="10.0"/>
                                            </GridPane.margin>
                                        </HBox>
                                        <Label fx:id="enableLoggingSetting" GridPane.rowIndex="3"/>
                                        <CheckBox fx:id="debugLogging" mnemonicParsing="false" GridPane.columnIndex="1"
                                                  GridPane.rowIndex="3"/>
                                    </children>
                                    <padding>
                                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                                    </padding>
                                </GridPane>
                                <Button fx:id="browseButton" layoutX="465.0" layoutY="15.0" mnemonicParsing="false"
                                        onAction="#showFileExplorer" prefWidth="25.0"/>
                            </children>
                        </AnchorPane>

                    </content>
                </Tab>
                <Tab fx:id="performanceTab">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label fx:id="performanceLabel" layoutX="37.0" layoutY="62.0"/>
                                <TextField fx:id="performanceFieldValue" layoutX="280.0" layoutY="59.0"/>
                                <Button fx:id="saveSettingsPerforanceButton" layoutX="275.0" layoutY="129.0"
                                        mnemonicParsing="false" onAction="#saveLogSettings"/>
                                <Button fx:id="cancelSettingsPerforanceButton" cancelButton="true" layoutX="347.0"
                                        layoutY="129.0" mnemonicParsing="false" onAction="#closeDialog"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>

    </children>
</Pane>
